#container { background-image: url(<%= asset_data_uri 'background.jpg'%>); background-size: cover; }


#content { width: 75%; display: table; margin: 0 auto; padding: 75px 0 45px 0; }

#menu { margin: 0; border-radius: 0; background: rgb(94, 59, 13); }

#header, #footer { background: rgb(141, 88, 26); }

.ui.cards .card { margin-top: 50px!important; background: rgba(255, 255, 255, 0.7); }
.ui.cards .card .description { text-align: justify; padding-top: 37px; }
.ui.cards .card img { position: absolute; width: 87px; top: -44px; left: 100px; }

#auth { margin: 0 auto; display: table; width: 40%; min-width: 300px; background: rgba(255, 255, 255, 0.7); }
#auth .ui.button { background-color: #877263; color: white; }
#auth .ui.button.right { float: right; }

.account-settings .ui.segment { background: rgba(255, 255, 255, 0.7); }
.account-settings .ui.button { background-color: #877263; color: white; }
.account-settings .buttons { text-align: right; }

#header .logo { padding: 1em 2em; }
#header .logo img { width: 75px; float: left; }
#header .logo span { display: inline-block; font-size: 41px; font-weight: bold; padding: 28px 0 0 30px; }
#header .contacts p { margin: 0; }
#header .contacts a { color: white; }
#header .timetable { padding-top: 26px; }

#footer a, #footer a:hover { color: #FFF; }
#footer .column { padding: 18px 30px; }

.bold { font-weight: bold; }

.width-5  { width: 5%;  }
.width-10 { width: 10%; }

.center { text-align: center!important; }
